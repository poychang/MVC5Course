@model IEnumerable<MVC5Course.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
</p>
<table class="table">
    <tr>
        <td>
            <div class="btn btn-default">
                @Html.ActionLink("Create New", "Create")
            </div>
            <div class="btn btn-default">
                <a href="@Url.Action("BatchUpdate")">批次更新小於6塊的變更成5塊</a>
            </div>
            <div>
                @using (Html.BeginForm())
                {
                    <input type="search" name="search" value="" placeholder="請輸入查詢關鍵字" />
                    <input type="submit" value="搜尋" />
                }
            </div>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                NT$ @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @*Html.DisplayFor(modelItem => item.Active)*@
                @(item.Active.Value ? "啟用" : "停用")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>
